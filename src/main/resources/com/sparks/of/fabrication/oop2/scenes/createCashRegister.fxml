<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sparks.of.fabrication.oop2.scenes.CreateCashRegister"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>
        <Label text="Enter Cash:"/>
        <TextField fx:id="cashInput" promptText="Enter cash amount"/>

        <Label text="Select Employee:"/>
        <ComboBox fx:id="employeeComboBox" promptText="Choose employee"/>
        <Button text="Create Checkout" onAction="#checkout" />
    </VBox>
</AnchorPane>
