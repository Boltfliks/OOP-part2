<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sparks.of.fabrication.oop2.scenes.CreateEmployee_scene">
    <Label text="Create New Employee" style="-fx-font-size: 16px;" />

    <Label text="Employee ID" />
    <TextField fx:id="idEmployeeField" promptText="Enter Employee ID" />

    <Label text="Employee Name" />
    <TextField fx:id="nameField" promptText="Enter Employee Name" />

    <Label text="Role" />
    <ComboBox fx:id="roleComboBox" promptText="Select Role" />

    <Button text="Save Employee" />
</VBox>
