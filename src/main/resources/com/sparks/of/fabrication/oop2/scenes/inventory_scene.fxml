<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.sparks.of.fabrication.oop2.scenes.Inventory_scene">
    <VBox spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">

        <!-- Search Bar -->
        <HBox spacing="5.0">
            <Label text="Search:" />
            <TextField fx:id="searchField" promptText="Enter search term..." HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- TableView -->
        <TableView fx:id="inventoryTable" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idItemColumn" text="ID" prefWidth="100.0" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0" />
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100.0" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100.0" />
                <TableColumn fx:id="arrivalPriceColumn" text="Arrival Price" prefWidth="100.0" />
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100.0" />
            </columns>
        </TableView>

        <!-- Update Section -->
        <GridPane hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml">
            <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Category:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200.0"/>

            <Label text="Price:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Arrival Price:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="arrivalPriceField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Quantity:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="quantityField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Button text="Save" fx:id="saveButton" onAction="#saveOrUpdateItem" GridPane.rowIndex="6" GridPane.columnIndex="1" />
        </GridPane>
    </VBox>
</AnchorPane>
