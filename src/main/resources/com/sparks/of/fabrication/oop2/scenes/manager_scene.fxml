<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sparks.of.fabrication.oop2.scenes.MainController">
   <BorderPane prefHeight="300.0" prefWidth="500.0">
      <top>
         <VBox>
            <MenuBar>
               <Menu text="General">
                  <MenuItem text="Take in Arrival Goods" onAction="#showArrivalGoods"/>
                  <MenuItem text="Cash Register" onAction="#showCashRegister"/>
                  <MenuItem text="Inventory" onAction="#showInventory"/>
                  <MenuItem text="About" onAction="#showAbout"/>
                  <MenuItem text="Exit" onAction="#handleExit"/>
               </Menu>
               <Menu text="References">
                  <MenuItem text="Invoices" onAction="#showInvoices"/>
                  <MenuItem text="Transactions" onAction="#showTransactions"/>
                  <MenuItem text="Logs" onAction="#showLogs" />
                  <MenuItem text="Statistic" onAction="#showStatistic"/>
                  <MenuItem text="Notifications" onAction="#handleNotification"/>
               </Menu>
               <Menu text="Admin Use">
                  <MenuItem text="CreateEmployee" onAction="#handleCreateEmployee"/>
                  <MenuItem text="CreateCheckout" onAction="#handleCheckout"/>
               </Menu>
            </MenuBar>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <Label text="Employee Interface" translateX="50.0" translateY="50.0">
                  <font>
                     <Font size="32.0"/>
                  </font>
               </Label>
            </HBox>
         </VBox>
      </top>
   </BorderPane>
</AnchorPane>
